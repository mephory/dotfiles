[colors]
background = ${env:WISP_BACKGROUND:#282828}
background-secondary = ${env:WISP_BACKGROUND_SECONDARY:#282828}
; background = #000
background-alt = #444
foreground = ${env:WISP_FOREGROUND:#ebdbb2}
foreground-alt = ${env:WISP_COLOR8:#555}

black = ${env:WISP_BACKGROUND:#282828}
red = ${env:WISP_COLOR9:#fb4934}
green = ${env:WISP_COLOR10:#b8bb26}
yellow = ${env:WISP_COLOR11:#fabd2f}
alt_blue = ${env:WISP_COLOR4:#4585dd}
blue = ${env:WISP_COLOR12:#83a598}
icon = ${env:WISP_FOREGROUND:#555}

[bar/default]
enable-ipc = true
width = 100%
height = 32
radius = 0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 5
line-color = #f00

border-size = 0
border-color = ${colors.background-secondary}

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 1

font-0 = Inconsolata:weight=bold:size=11:antialias=true;1
font-1 = Font Awesome 6 Brands:size=10:antialias=true;2
font-2 = siji:size=12:antialias=true;1
font-3 = Font Awesome 6 Free:style=Solid:size=10:antialias=true;2
font-4 = Source Han Sans JP:size=11
font-5 = "waffle:size=12;2"
font-6 = "Noto Color Emoji:size=11:style=Regular:scale=11;2"
font-7 = hack:weight=bold:size=8:antialias=true;2

modules-left = xmonad playerctl
modules-center = xwindow
modules-right = wisp-indicator services hue pulseaudio date

tray-position = right
tray-padding = 2
tray-reparent = false

override-redirect = false
wm-restack = generic
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:…%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /x
mount-2 = /z

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.icon}
format-underline = 

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = %percentage%%
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.icon}
label-volume-foreground = ${root.foreground}

format-muted = <label-muted>
label-muted = %{F#555} %percentage%%
label-muted-foreground = #666

click-right = pavucontrol --name polybar-pavucontrol &
use-ui-max = false

format-muted-underline =
format-volume-underline =

[module/xmonad]
type = custom/script
exec = tail -F /tmp/workspace-info
exec-if = [ -p /tmp/workspace-info ]
tail = true

[module/pbstatus]
type = custom/script
exec = /home/mephory/code/pbstatus/pbstatus
exec-if = true
tail = true
click-left = view-fbg filtered &
click-middle = kill -USR1 %pid%

[module/playerctl]
type = custom/script
exec = polybar-playerctl
exec-if = true
tail = true
; click-left = polybar-playerctl2 toggle
; click-middle = polybar-playerctl2 switch
; click-right = polybar-playerctl2 next
; format-underline = ${colors.alt_blue}
format = <label>
; label = %output:0:40:…%

[module/timer]
type = custom/script
exec = polybar-timer
exec-if = true
tail = true
click-left = polybar-timer toggle
click-right = polybar-timer reset
click-middle = polybar-timer toggle_mode
scroll-up = polybar-timer increase_time
scroll-down = polybar-timer decrease_time
format-prefix = " "
format-prefix-foreground = ${colors.icon}

[module/hue]
type = custom/script
exec = polybar-hue
exec-if = true
tail = true
click-left = polybar-hue toggle
click-middle = polybar-hue next
click-right = polybar-hue change_color
scroll-up = polybar-hue increase
scroll-down = polybar-hue decrease

[module/ping]
type = custom/script
exec = polybar-ping
interval = 10

[module/progress]
type = custom/script
exec = polybar-progress
exec-if = true
tail = true

[module/wisp-indicator]
type = custom/script
exec = wisp-indicator
exec-if = true
tail = true

[module/services]
type = custom/script
exec = polybar-services sshd user:lstatus:ls user:streamdeckd:sd
exec-if = true
tail = true
label-font = 8

