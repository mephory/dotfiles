[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.alt_blue}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/xmonad]
type = custom/script
exec = tail -F /tmp/workspace-info
exec-if = [ -p /tmp/workspace-info ]
tail = true

[module/pbstatus]
type = custom/script
exec = /home/mephory/code/pbstatus/pbstatus
exec-if = true
tail = true
click-left = view-fbg filtered &
click-middle = kill -USR1 %pid%

[module/playerctl]
type = custom/script
exec = polybar-playerctl
exec-if = true
tail = true
click-left = playerctl -p $(cat /tmp/playerctl-current) play-pause
click-middle = kill -USR1 %pid%
click-right = playerctl -p $(cat /tmp/playerctl-current) next
format-underline = ${colors.alt_blue}
format = <label>
label = %output:0:40:…%

[module/timer]
type = custom/script
exec = polybar-timer
exec-if = true
tail = true
click-left = polybar-timer toggle
click-right = polybar-timer reset
click-middle = polybar-timer toggle_mode
scroll-up = polybar-timer increase_time
scroll-down = polybar-timer decrease_time

