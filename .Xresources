Xcursor.theme: breeze

*faceName: inconsolata:size=14
*font: xft:inconsolata:size=14,\
       xft:Source Code Pro:pixelsize=18:style=medium:antialias=true,\
       xft:SourceHansSansJP,\
       -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
*boldFont: xft:inconsolata:bold:size=14,\
       xft:Source Code Pro:pixelsize=18:style=medium:antialias=true,\
       xft:SourceHansSansJP,\
       -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
*letterSpace: -1
! *faceName: jetbrainsmono:size=12
! *faceName: meslo:size=12
*faceNameDoublesize: Source Han Sans JP
invertedTerm*faceName: inconsolata:size=13
! invertedTerm*faceName: meslo:size=11
st*font: Inconsolata:size=14:antialias=true:autohint=true

Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.dpi: 96

*urgentOnBell: true
*bellIsUrgent: true
*scrollBar: false

xterm*termName: xterm-256color
! *decTerminalID: vt340
! *numColorRegisters: 256

! User Super as the meta key
*VT100.Translations: #override \
  Super<KeyPress>: string(0x1b) insert()

